@model LaFiesta.ViewModels.Create.CreateTicketFestivalViewModel

@{
    ViewData["Title"] = "Tickets per Festival aanmaken";
}

<h1 class="mt-5">@ViewData["Title"]</h1>

<div class="row">
    <form asp-action="Create" class="needs-validation" novalidate>
        <div class="form-row">
            <div class="col">
                <div class="form-group">
                    <label asp-for="FestivalId" class="control-label">Festival</label><br />
                    <select asp-for="FestivalId" class="form-select" aria-label="Default select">
                        @foreach (var festival in Model.Festivals)
                        {
                            <option value="@festival.Id">@Html.DisplayFor(modelItem => festival.Naam) (@Html.DisplayFor(modelItem => festival.BeginDatum))</option>
                        }
                    </select>
                    <span asp-validation-for="FestivalId" class="text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label asp-for="TicketId" class="control-label">Ticket</label><br />
                    <select asp-for="TicketId" class="form-select" aria-label="Default select">
                        @foreach (var ticket in Model.Tickets)
                        {
                            <option value="@ticket.Id">@Html.DisplayFor(modelItem => ticket.Soort) (@Html.DisplayFor(modelItem => ticket.Datum))</option>
                        }
                    </select>
                    <span asp-validation-for="TicketId" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group ml-2">
            <input type="submit" value="Create" class="btn" />
            <a asp-action="Index" class="btn">Terug naar lijst</a>
        </div>
    </form>
</div>
